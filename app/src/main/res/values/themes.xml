<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors for backgrounds and main text -->
        <item name="android:colorBackground">#FFFFFF</item> <!-- White background for a clean look -->
        <item name="colorPrimary">#424242</item> <!-- Dark grey for primary elements like app bar and text -->
        <item name="colorPrimaryVariant">#333333</item> <!-- Darker grey for subtle contrast -->
        <item name="colorOnPrimary">@color/white</item> <!-- White text on dark grey primary background -->

        <!-- Accent color for buttons (Dark Yellow) -->
        <item name="colorAccent">#D4A017</item> <!-- Dark Yellow for buttons and key accents -->

        <item name="buttonStyle">@style/MyButtonStyle</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">#D9C3A6</item> <!-- Warm Taupe for warmth in secondary elements -->
        <item name="colorSecondaryVariant">#B3A28F</item> <!-- Darker Taupe variant for subtle contrast -->


        <!-- Tertiary color for soft accents -->
        <item name="colorTertiary">#9DBF9E</item> <!-- Sage Green for calm, nature-inspired accents -->
        <item name="colorOnTertiary">@color/black</item> <!-- Black text on sage green accents -->

        <!-- Neutral colors for surfaces -->
        <item name="colorSurface">#E0E0E0</item> <!-- Light grey for surface backgrounds like cards -->
        <item name="colorOnSurface">@color/black</item> <!-- Black text on grey surfaces -->

        <!-- Text colors -->
        <item name="colorOnBackground">@color/black</item> <!-- Black text on white background -->
        <item name="colorOnSecondary">@color/black</item> <!-- Black text on taupe accents -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#D4A017</item> <!-- Dark Yellow for buttons -->
        <item name="android:textColor">@color/black</item> <!-- Black text on yellow buttons -->
    </style>
</resources>

